<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8" />
	<title>{% block title %}AniList - Home{% endblock %}</title>
	<!-- Latest compiled and minified CSS Bootstrap -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	{% block stylesheets %}
	{% endblock %}
	<link rel="icon" type="image/x-icon" href="http://cyril-bidaud.me/resource/img/favicon.png" />
</head>
<body>
	<div class="container">
		{% block body %} 
		<div class="row">
			<h1 class="page-header">Welcome to AniList</h1>
			<table class="table table-striped">
				<thead>
					<tr><th>Name</th><th>Description</th><th>&nbsp;</th></tr>
				</thead>
				<tbody>
					{% for item in animalsTab %}
					<tr style="background-color:{{item.colorBG}}">
						<td>{{item.name}}</td>
						<td>{{item.type}}</td>
						<td>
							<a class="btn btn-warning" title="Edit" href="{{item.editUrl}}">
								<span class="glyphicon glyphicon-pencil"></span>
							</a>
							&nbsp;
							<a class="btn btn-danger" title="Delete" href="{{item.deleteUrl}}">
								<span class="glyphicon glyphicon-trash"></span>
							</a>
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		{% endblock %}
	</div>
	{% block javascripts %}{% endblock %}
</body>
</html>
